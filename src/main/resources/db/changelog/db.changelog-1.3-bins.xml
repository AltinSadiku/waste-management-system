<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Create Bins Table -->
    <changeSet id="1.3" author="system">
        <createTable tableName="bins">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(120)"/>
            <column name="latitude" type="DECIMAL(10, 8)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="DECIMAL(11, 8)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(200)"/>
            <column name="type" type="VARCHAR(20)"/>
            <column name="fill_level" type="DECIMAL(4, 3)"/>
        </createTable>

        <createIndex tableName="bins" indexName="idx_bins_type">
            <column name="type"/>
        </createIndex>

        <createIndex tableName="bins" indexName="idx_bins_location">
            <column name="latitude"/>
            <column name="longitude"/>
        </createIndex>
    </changeSet>

